{
	"extends": "../../tsconfig.options.json",
	"include": ["**/*"],
	"references": [
		{
			"path": "../core-extension"
		},
		{
			"path": "../core-server"
		},
		{
			"path": "../rpc"
		},
		{
			"path": "../types"
		}
	],
	"compilerOptions": {
		"outDir": "../../.moon/cache/types/packages/driven-browser-driver",
		"lib": ["dom", "ESNext", "ES2024.ArrayBuffer"],
		"paths": {
			"@mcp-browser-kit/core-server": ["../core-server/src/index.ts"],
			"@mcp-browser-kit/core-server/*": ["../core-server/src/*"],
			"@mcp-browser-kit/types": ["../types/src/index.ts"],
			"@mcp-browser-kit/types/*": ["../types/src/*"],
			"@mcp-browser-kit/rpc": ["../rpc/src/index.ts"],
			"@mcp-browser-kit/rpc/*": ["../rpc/src/*"],
			"@mcp-browser-kit/browser-extension": ["../core-extension/src/index.ts"],
			"@mcp-browser-kit/browser-extension/*": ["../core-extension/src/*"],
			"@mcp-browser-kit/core-extension": ["../core-extension/src/index.ts"],
			"@mcp-browser-kit/core-extension/*": ["../core-extension/src/*"]
		}
	}
}
