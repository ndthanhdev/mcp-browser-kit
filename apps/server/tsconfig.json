{
	"extends": "../../tsconfig.options.json",
	"compilerOptions": {
		"emitDeclarationOnly": true,
		"baseUrl": ".",
		"paths": {
			"@mcp-browser-kit/extension/*": [
				"../extension/src/*"
			],
			"@mcp-browser-kit/core-server": [
				"../../packages/core-server/src/index.ts"
			],
			"@mcp-browser-kit/core-server/*": [
				"../../packages/core-server/src/*"
			],
			"@mcp-browser-kit/server-driven-extension-driver": [
				"../../packages/driven-extension-driver/src/index.ts"
			],
			"@mcp-browser-kit/server-driven-extension-driver/*": [
				"../../packages/driven-extension-driver/src/*"
			],
			"@mcp-browser-kit/extension-driven-logger-factory": [
				"../../packages/driven-logger-factory/src/index.ts"
			],
			"@mcp-browser-kit/extension-driven-logger-factory/*": [
				"../../packages/driven-logger-factory/src/*"
			],
			"@mcp-browser-kit/server-driven-extension-channel-provider": [
				"../../packages/server-driven-extension-channel-provider/src/index.ts"
			],
			"@mcp-browser-kit/server-driven-extension-channel-provider/*": [
				"../../packages/server-driven-extension-channel-provider/src/*"
			],
			"@mcp-browser-kit/driven-extension-driver": [
				"../../packages/driven-extension-driver/src/index.ts"
			],
			"@mcp-browser-kit/driven-extension-driver/*": [
				"../../packages/driven-extension-driver/src/*"
			],
			"@mcp-browser-kit/driven-logger-factory": [
				"../../packages/driven-logger-factory/src/index.ts"
			],
			"@mcp-browser-kit/driven-logger-factory/*": [
				"../../packages/driven-logger-factory/src/*"
			],
			"@mcp-browser-kit/utils": [
				"../../packages/utils/src/index.ts"
			],
			"@mcp-browser-kit/utils/*": [
				"../../packages/utils/src/*"
			],
			"@mcp-browser-kit/server-driving-trpc-controller": [
				"../../packages/server-driving-trpc-controller/src/index.ts"
			],
			"@mcp-browser-kit/server-driving-trpc-controller/*": [
				"../../packages/server-driving-trpc-controller/src/*"
			]
		},
		"outDir": "../../.moon/cache/types/apps/server"
	},
	"include": [
		"src/**/*.ts",
		"../../packages/rpc/src/**/*",
		"../../packages/core-server/src/**/*",
		"../../packages/driven-extension-driver/src/**/*",
		"../../packages/server-driven-extension-channel-provider/src/**/*",
		"../../packages/server-driving-trpc-controller/src/**/*"
	],
	"references": [
		{
			"path": "../../packages/core-server"
		},
		{
			"path": "../../packages/driven-extension-driver"
		},
		{
			"path": "../../packages/driven-logger-factory"
		},
		{
			"path": "../../packages/server-driven-extension-channel-provider"
		},
		{
			"path": "../../packages/utils"
		},
		{
			"path": "../../packages/server-driving-trpc-controller"
		}
	]
}
