{
	"extends": "tsconfig-moon/tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"incremental": true,
		"moduleResolution": "node",
		"verbatimModuleSyntax": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "ESNext",
		"target": "ES2024",
		"lib": [
			"ESNext"
		],
	}
}